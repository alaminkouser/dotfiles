xwayland disable

set $mod Mod4

include /etc/sway/config-vars.d/*

output * bg #000000 solid_color

# Start Yofi Launcher
bindsym $mod+Return exec ps cax | grep yofi || $HOME/.local/bin/yofi

# Toggle the current focus between tiling and floating mode
bindsym $mod+space floating toggle

# mouse button for dragging.
floating_modifier $mod normal

# Move focused window by 1 pixel
bindsym $mod+Up    move up    1px
bindsym $mod+Down  move down  1px
bindsym $mod+Left  move left  1px
bindsym $mod+Right move right 1px

# Resize with Mod+Ctrl+Arrow
bindsym $mod+Ctrl+Up    resize shrink height 10 px
bindsym $mod+Ctrl+Down  resize grow   height 10 px
bindsym $mod+Ctrl+Left  resize shrink width  10 px
bindsym $mod+Ctrl+Right resize grow   width  10 px

# bar {
#     position top

#     status_command while date +"%Y-%m-%d %X"; do sleep 1; done
#     status_edge_padding 0
#     status_padding 0
#     colors {
# 	statusline #808080
# 	background #000000
# 	focused_workspace #808080ff #000000 #808080
#       inactive_workspace #00000000 #00000000 #808080
#     }
# }


input type:touchpad {
    tap enabled
    natural_scroll enabled
}

default_border none
focus_follows_mouse no

include /etc/sway/config.d/*
